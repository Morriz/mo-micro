{
  "name": "mozservices",
  "version": "0.0.1",
  "description": "Micro service architecture with JWT implementation, based on zeit/micro",
  "main": "build/index.js",
  "dependencies": {
    "cookie": "^0.3.1",
    "jwt-redis-session": "^1.0.4",
    "micro-core": "^0.3.0",
    "redis": "^2.6.2",
    "request-promise": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-syntax-async-functions": "6.3.13",
    "babel-plugin-transform-async-to-generator": "6.4.6",
    "babel-plugin-transform-runtime": "6.4.3",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.5.2",
    "babel-runtime": "^6.3.19",
    "eslint": "^1.7.2",
    "eslint-config-standard": "^4.4.0",
    "eslint-friendly-formatter": "^1.2.2",
    "eslint-plugin-import": "^0.10.0",
    "eslint-plugin-standard": "^1.3.1",
    "micro": "^6.0.2",
    "nodemon": "^1.7.3",
    "pre-commit": "^1.1.3",
    "test-listen": "^1.0.0"
  },
  "scripts": {
    "dev": "nodemon --delay 1.5 --exec micro -p 3000 src/index.js",
    "start": "micro-serve -p 3000 --no-babel .",
    "auth": "nodemon --delay 1.5 --exec micro -p 3001 src/auth.js",
    "hello": "nodemon --delay 1.5 --exec micro -p 3011 src/hello.js",
    "world": "nodemon --delay 1.5 --exec micro -p 3012 src/world.js",
    "build": "rm -rf build > /dev/null && babel src --out-dir build",
    "lint": "eslint . -f node_modules/eslint-friendly-formatter",
    "test": "ava"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "source": [
      "**/*.js",
      "!build/**/*"
    ],
    "failFast": true,
    "tap": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "zeitmicro",
    "microservice",
    "microservices"
  ],
  "author": "Maurice Faber <morriz@idiotz.nl>",
  "license": "GPL-3.0"
}
